<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="colorPrimary">@color/statusbar_color</item>
      <item name="colorPrimaryDark">@color/statusbar_color</item>
      
      <item name="android:actionMenuTextColor">@color/base_color</item>
    </style>
  
    <style name="LaunchScreen" parent="AppTheme">
      <item name="android:windowBackground">@color/base_color</item>
    </style>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>
  
    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="colorPrimary">@color/base_color</item> <!-- 导航栏颜色 --> 
      <item name="colorPrimaryDark">@color/statusbar_color</item> <!-- 状态栏颜色 -->  
      <item name="colorAccent">@color/base_color</item> <!-- 圆形按钮颜色 -->
      <item name="android:windowBackground">@color/window_background</item>
      
      <item name="android:actionMenuTextColor">@color/base_color</item>
    </style>
  
    <style name="Widget.CardContent" parent="android:Widget">
      <item name="android:paddingLeft">16dp</item>
      <item name="android:paddingRight">16dp</item>
      <item name="android:paddingTop">24dp</item>
      <item name="android:paddingBottom">24dp</item>
      <item name="android:orientation">vertical</item>
    </style>

    <!-- 输入框基本样式 -->
    <style name="Base.Theme.EditText" parent="android:style/Widget.Holo.Light.EditText">
      <item name="android:paddingBottom">15dp</item>
      <item name="android:textColorHint">#9D9D9D</item>
      <item name="android:layout_marginTop">5dp</item>
    </style>
    <!-- 按钮基本样式 -->
    <style name="Base.Theme.Button" parent="@style/Widget.AppCompat.Button.Borderless">
      <item name="android:background">@drawable/button_style</item>
      <item name="android:textColor">@drawable/button_text_style</item>
      <item name="android:elevation">2dp</item>
      <item name="android:layout_height">39dp</item>
      <item name="android:layout_marginTop">14dp</item>
      <item name="android:layout_marginLeft">9dp</item>
      <item name="android:layout_marginRight">9dp</item>
      <item name="android:textSize">14dp</item>
      <item name="android:textStyle">bold</item>
    </style>

  <style name="NavigationViewStyle">
    <item name="android:textSize">15dp</item>
  </style>
</resources>
